# Server Environment Configuration

# Basic Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your-secret-key-change-in-production

# Admin Scheduling Panel
ADMIN_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_strong_password
ACTION_TOKEN_SECRET=change_me_strong_secret_for_booking_tokens

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-other-domain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Database (SQLite - path is relative to server directory)
# DATABASE_PATH=./portfolio.db

# Scheduling Features
ENABLE_REMINDERS=false
ENABLE_NOTIFICATIONS=false